{
	"name": "svelte-dialogue-tree",
	"version": "1.0.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"package": "svelte-kit sync && svelte-package && publint",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"description": "A Svelte library to create and interact with a branching dialogue.",
	"author": {
		"name": "KutayGuler"
	},
	"repository": {
		"url": "https://github.com/KutayGuler/svelte-dialogue-tree",
		"type": "git"
	},
	"keywords": [
		"svelte",
		"dialogue",
		"tree",
		"branch",
		"rpg",
		"visual novel"
	],
	"license": "MIT",
	"homepage": "svelte-dialogue-tree.vercel.app",
	"peerDependencies": {
		"svelte": "^3.54.0"
	},
	"devDependencies": {
		"@skeletonlabs/skeleton": "^1.0.0",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.5.0",
		"@sveltejs/package": "^2.0.2",
		"@tailwindcss/typography": "^0.5.9",
		"autoprefixer": "^10.4.14",
		"postcss": "^8.4.21",
		"prettier": "^2.8.7",
		"prettier-plugin-svelte": "^2.8.1",
		"prettier-plugin-tailwindcss": "^0.2.5",
		"publint": "^0.1.11",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"svelte2tsx": "^0.6.10",
		"tailwindcss": "^3.2.7",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.2.0"
	},
	"type": "module",
	"dependencies": {
		"highlight.js": "^11.7.0",
		"highlightjs-svelte": "^1.0.6"
	}
}
